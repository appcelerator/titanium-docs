@require './config'

$mobileSidebarWidth = $sidebarWidth * 0.82
$mobileApiSidebarWidth = $apiSidebarWidth * 0.82

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    font-size 15px
    width $mobileSidebarWidth
  .api-sidebar-wrapper
    width $mobileApiSidebarWidth

// wide mobile
@media (max-width: $MQMobile)
  .sidebar
    position fixed
    top $navbarHeight
    bottom 0
    height auto
    z-index 10
    transform translateX(-100%)
    transition transform .2s ease
  .api-sidebar-wrapper
    width $apiSidebarWidth * 1.2
    position fixed
    top $navbarHeight
    right 0
    bottom 0
    height auto
    z-index: 10;
    transform translateX(100%)
    transition transform .2s ease
  .theme-container
    display block
    &.sidebar-open
      .sidebar
        transform translateX(0)
    &.api-sidebar-open
      .api-sidebar-wrapper
        transform translateX(0)
    &.no-navbar
      .sidebar
        padding-top: 0

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 1.9rem
  .content
    div[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0
